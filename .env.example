# .env.example
# Copy this file to .env and update with your values

# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_PORT=27017
MONGODB_DATABASE=ricambi_db

# Application
APP_ENVIRONMENT=production
LOG_LEVEL=info

# Security
ADMIN_DEFAULT_PASSWORD=Admin123!ChangeMe
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-too

# Mongo Express (Web UI for MongoDB)
MONGO_EXPRESS_PORT=8081
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=pass

# Barcode Printer (optional)
BARCODE_PRINTER_IP=192.168.1.100
BARCODE_PRINTER_PORT=9100

# Email notifications (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@example.com
